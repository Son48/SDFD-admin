<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hear.HearUpdate">
    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"

            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_margin="5dp"
                android:id="@+id/textlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/bungee"
                android:text="Weight Loss dish"
                android:textColor="#000"
                android:textSize="35sp"
                android:transitionName="logo_text" />

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="190dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/addh_imageup"
                    android:layout_width="350dp"
                    android:layout_height="190dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/popularimg"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/h_imgup"
                    android:layout_width="350dp"
                    android:layout_height="190dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/popularimg"
                    app:riv_corner_radius="14dp" />
            </RelativeLayout>
            <EditText
                android:id="@+id/name_hup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:hint="name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/calo_hup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_background"
                android:hint="calo"
                android:padding="10dp" />


            <EditText
                android:id="@+id/description_hup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:hint="description"
                android:padding="10dp" />

            <EditText
                android:id="@+id/type_hup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:hint="type"
                android:padding="10dp" />

            <EditText
                android:id="@+id/time_hup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:hint="time"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/update_hup"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@color/black"
                    android:text="UPDATE"
                    android:textAllCaps="false"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/delete_hdl"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@color/black"
                    android:text="DELETE"
                    android:textAllCaps="false" />
            </LinearLayout>




        </LinearLayout>

    </ScrollView>
</RelativeLayout>